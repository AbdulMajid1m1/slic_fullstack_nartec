{
  "info": {
    "_postman_id": "supplier-api-v1",
    "name": "Supplier API",
    "description": "Complete Supplier Management API with CRUD operations, authentication, and status management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register Supplier",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"ABC Trading Company\", \"email\": \"supplier@abctrading.com\", \"password\": \"SecurePassword123\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/register",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "register"]
            }
          }
        },
        {
          "name": "Login Supplier",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"supplier@abctrading.com\", \"password\": \"SecurePassword123\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/login",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Get Suppliers",
      "item": [
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Suppliers - Pending",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1?page=1&limit=10&status=pending",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get All Suppliers - Approved",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1?page=1&limit=10&status=approved",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "approved"
                }
              ]
            }
          }
        },
        {
          "name": "Get Supplier by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/{{supplier_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "{{supplier_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Update Supplier",
      "item": [
        {
          "name": "Update Supplier Info",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"ABC Trading Company Updated\", \"email\": \"newemail@abctrading.com\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/{{supplier_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "{{supplier_id}}"]
            }
          }
        },
        {
          "name": "Approve Supplier",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"status\": \"approved\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/{{supplier_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "{{supplier_id}}", "status"]
            }
          }
        },
        {
          "name": "Reject Supplier",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"status\": \"rejected\"}"
            },
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/{{supplier_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "{{supplier_id}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Delete Supplier",
      "item": [
        {
          "name": "Delete Supplier",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/suppliers/v1/{{supplier_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "v1", "{{supplier_id}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://uat.slicapp.online",
      "type": "string",
      "description": "Base API URL"
    },
    {
      "key": "token",
      "value": "",
      "type": "string",
      "description": "JWT Authentication Token"
    },
    {
      "key": "supplier_id",
      "value": "",
      "type": "string",
      "description": "Supplier ID"
    }
  ]
}
