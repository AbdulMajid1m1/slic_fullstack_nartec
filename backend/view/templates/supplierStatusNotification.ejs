<%- include('../layouts/header') %>

<!-- Main Content -->
<table
  role="presentation"
  style="
    width: 100%;
    max-width: 600px;
    margin: 30px auto;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 51, 102, 0.1);
    overflow: hidden;
    border: 1px solid #e0e7ff;
  "
  class="mobile-container"
>
  <tr>
    <td style="padding: 50px 40px" class="mobile-padding small-mobile-padding">
      <!-- Greeting -->
      <p
        style="
          color: #1e3a5f;
          font-size: 16px;
          margin: 0 0 20px 0;
          line-height: 1.6;
        "
      >
        Dear <%= supplierName %>,
      </p>

      <!-- Status Message -->
      <div style="<%= status === 'approved' ? 'background-color: #f0fdf4; border-left: 4px solid #22c55e;' : 'background-color: #fef2f2; border-left: 4px solid #ef4444;' %> padding: 20px; margin: 25px 0; border-radius: 6px;">
        <p style="<%= status === 'approved' ? 'color: #15803d;' : 'color: #991b1b;' %> font-size: 18px; font-weight: 600; margin: 0;">
          <% if (status === 'approved') { %>
            ✓ Your account has been approved!
          <% } else if (status === 'rejected') { %>
            ✗ Your account has been rejected
          <% } %>
        </p>
      </div>

      <!-- Details -->
      <div style="margin: 30px 0;">
        <p
          style="
            color: #1e3a5f;
            font-size: 16px;
            margin: 0 0 15px 0;
            line-height: 1.6;
          "
        >
          <strong>Account Details:</strong>
        </p>

        <table
          role="presentation"
          style="
            width: 100%;
            border-collapse: collapse;
            background-color: #f8fafb;
            border-radius: 6px;
            overflow: hidden;
          "
        >
          <tr>
            <td
              style="
                padding: 12px 15px;
                border-bottom: 1px solid #e5e7eb;
                color: #6b7280;
                font-size: 14px;
                font-weight: 600;
                width: 40%;
              "
            >
              Company Name:
            </td>
            <td
              style="
                padding: 12px 15px;
                border-bottom: 1px solid #e5e7eb;
                color: #1e3a5f;
                font-size: 14px;
              "
            >
              <%= supplierName %>
            </td>
          </tr>
          <tr>
            <td
              style="
                padding: 12px 15px;
                border-bottom: 1px solid #e5e7eb;
                color: #6b7280;
                font-size: 14px;
                font-weight: 600;
              "
            >
              Email:
            </td>
            <td
              style="
                padding: 12px 15px;
                border-bottom: 1px solid #e5e7eb;
                color: #1e3a5f;
                font-size: 14px;
              "
            >
              <%= supplierEmail %>
            </td>
          </tr>
          <tr>
            <td
              style="
                padding: 12px 15px;
                color: #6b7280;
                font-size: 14px;
                font-weight: 600;
              "
            >
              Status:
            </td>
            <td
              style="
                padding: 12px 15px;
                color: #1e3a5f;
                font-size: 14px;
              "
            >
              <span style="<%= status === 'approved' ? 'background-color: #dcfce7; color: #166534;' : 'background-color: #fee2e2; color: #7f1d1d;' %> padding: 4px 12px; border-radius: 4px; font-weight: 600; font-size: 13px; display: inline-block;">
                <%= status && status.length > 0 ? status.charAt(0).toUpperCase() + status.slice(1) : '' %>
              </span>
            </td>
          </tr>
        </table>
      </div>

      <!-- Message based on status -->
      <div style="margin: 30px 0; padding: 20px; background-color: #f9fafb; border-radius: 6px;">
        <% if (status === 'approved') { %>
          <p
            style="
              color: #1e3a5f;
              font-size: 15px;
              margin: 0;
              line-height: 1.6;
            "
          >
            Congratulations! Your supplier account has been approved by SLIC. You can now:
          </p>
          <ul
            style="
              color: #1e3a5f;
              font-size: 14px;
              margin: 12px 0 0 20px;
              padding-left: 0;
              line-height: 1.8;
            "
          >
            <li>Access the SLIC platform</li>
            <li>Submit your products and services</li>
            <li>Manage your inventory</li>
            <li>Track orders and shipments</li>
          </ul>
        <% } else if (status === 'rejected') { %>
          <p
            style="
              color: #1e3a5f;
              font-size: 15px;
              margin: 0;
              line-height: 1.6;
            "
          >
            Unfortunately, your supplier account has been rejected.
            <% if (reason) { %>
              <br />
              Reason: <%= reason %>
            <% } %>
          </p>
          <p
            style="
              color: #1e3a5f;
              font-size: 14px;
              margin: 15px 0 0 0;
              line-height: 1.6;
            "
          >
            If you believe this is an error or would like more information, please contact our support team.
          </p>
        <% } %>
      </div>

      <!-- Call to Action -->
      <% if (status === 'approved') { %>
        <div style="text-align: center; margin: 30px 0;">
          <a
            href="https://uat.slicapp.online/supplier/dashboard"
            style="
              display: inline-block;
              background-color: #003366;
              color: #ffffff;
              padding: 12px 30px;
              text-decoration: none;
              border-radius: 6px;
              font-weight: 600;
              font-size: 14px;
              letter-spacing: 0.3px;
            "
          >
            Go to Dashboard
          </a>
        </div>
      <% } %>

      <!-- Closing -->
      <p
        style="
          color: #1e3a5f;
          font-size: 15px;
          margin: 30px 0 0 0;
          line-height: 1.6;
        "
      >
        Best regards,<br />
        <strong>SLIC Team</strong><br />
        Saudi Leather Industries Company
      </p>
    </td>
  </tr>
</table>

<%- include('../layouts/footer') %>